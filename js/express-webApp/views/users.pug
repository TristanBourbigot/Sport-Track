html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        
        form(action='/users', method='post')
            label(for='nom') Nom:
            br
            input#nom(type='text', name='nom')
            br
            br
            label(for='prenom') Prenom:
            br
            input#prenom(type='text', name='prenom')
            br
            label(for='dateN') Date de naissance
            br
            input#dateN(type='date', name='dateN')
            br
            br
            input#homme(type='radio', name='sexe', value='Homme')
            label(for='homme') Homme
            br
            input#femme(type='radio', name='sexe', value='Femme')
            label(for='femme') Femme
            br
            input#autre(type='radio', name='sexe', value='Autre')
            label(for='autre') Autre
            br
            br
            label(for='taille') taille:
            br
            input#taille(type='text', name='taille', pattern='[0-9]{2,3}')
            |  cm
            br
            br
            label(for='poids') poids:
            br
            input#poids(type='text', name='poids', pattern='[0-9]{2,3}')
            |  kg
            br
            br
            br
            label(for='email') email:
            br
            input#email(type='text', name='email')
            br
            br
            label(for='mdp')
                | Mot de passe: 
                br
                | -8 caract&egrave;res compos&eacute;s 
                br
                | -1 chiffre 
                br
                | -1 lettre majuscule 
                br
                | -1 lettre minuscule
            br
            input#mdp(type='password', name='mdp', title='-8 caractères composés -1 chiffre -1 lettre majuscule -1 lettre minuscule')
            br
            br
            input(type='submit', value='valider')

        table(border='1')
            thead
                tr
                    th Id
                    th Nom
                    th Prénom
                    th Date de naissance
                    th Genre
                    th Taille
                    th Poids
                    th Email
                    th Mot de passe
            tbody
                each val in data
                    tr
                    td= val.id
                    td= val.name
                    td= val.first_name
                    td= val.birthdate
                    td= val.gender
                    td= val.height
                    td= val.weight
                    td= val.email
                    td= val.password
                    
                    